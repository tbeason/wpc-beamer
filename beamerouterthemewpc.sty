\mode<presentation>

% color definitions
\definecolor{asumaroon}{RGB}{140,29,64}

% Normal title page.
\defbeamertemplate*{title page}{simple}[1][]
{
	\vfill
	\begin{centering}
		\begin{beamercolorbox}[center, rounded=true]{title}
			\usebeamerfont{title}\inserttitle\par%
			\ifx\insertsubtitle\@empty%
			\else%
        			\vskip0.25em%
			        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
			\fi%
		\end{beamercolorbox}%

		\vskip1em

		\begin{beamercolorbox}[sep=8pt,center,#1]{author}
			\usebeamerfont{author}\insertauthor
		\end{beamercolorbox}

		\vskip1em

		{\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
		\begin{beamercolorbox}[sep=8pt,center,#1]{institute}
			\usebeamerfont{date}\insertinstitute
		\end{beamercolorbox}

		\vskip1em

		\begin{beamercolorbox}[sep=8pt,center,#1]{date}
			\usebeamerfont{date}\insertdate
		\end{beamercolorbox}
	\end{centering}
	\vfill
}
\titlegraphic{\includegraphics[width=3in]{asuwpc_rgb}}

% footer styling
\setbeamercolor{title in footer}{fg=white,bg=asumaroon}
\setbeamercolor{pagenumber in footer}{fg=white,bg=asumaroon}

\defbeamertemplate*{footline}{wpctheme}
{%
  \ifnum\c@framenumber=1
  \else
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,center]{title in footer}%
    \inserttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,center]{pagenumber in footer}%
   \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
  \end{beamercolorbox}}%
  \vskip0pt%
  fi%
}

\setbeamersize{text margin left=1em,text margin right=1em}

\mode
<all>
